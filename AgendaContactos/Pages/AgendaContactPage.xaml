<ContentPage
    x:Class="AgendaContactos.Pages.AgendaContactPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="#121212">

    <VerticalStackLayout Padding="20">

        <CollectionView x:Name="ContactosView" SelectionMode="Single">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="5" BackgroundColor="#1E1E1E" BorderColor="#333333">
                        <VerticalStackLayout>
                            <Label Text="{Binding Nombre}" FontAttributes="Bold" TextColor="White" />
                            <Label Text="{Binding Apellidos}" TextColor="White" />
                            <Label Text="{Binding Telefono}" TextColor="White" />
                            <Label Text="{Binding Email}" TextColor="White" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <HorizontalStackLayout Spacing="10">
            <Button Text="Modificar" Clicked="OnModificarClicked"
                    BackgroundColor="Blue" TextColor="White" />
            <Button Text="Borrar" Clicked="OnBorrarClicked"
                    BackgroundColor="Red" TextColor="White" />
        </HorizontalStackLayout>

    </VerticalStackLayout>
</ContentPage>
